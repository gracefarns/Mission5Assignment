@{
    ViewData["Title"] = "Tutoring";
}
<h1>@ViewData["Title"]</h1>

<h2>For information on book club tutoring, please enter the following </h2>
<form>
    <label>Number of Tutoring Hours Needed</label>
    <input type="number" id="HrsNeeded"/>
    <br />
    <label>Hourly Rate $</label>
    <input id="HrRate" readonly value="16"/>
    <br />
    <input type="button" value="calculate" id="calculate" />
    <br />
    <br />
    <label id="totalLabel" class="invisible">Total Cost $</label>
    <input id="totalCost" class="invisible" readonly value="" />
    
</form>
